---
// lineWeightアニメーションのプレビューコンポーネント
---

<div class="lineWeight-preview">
  <div class="lineWeight-animation"></div>
</div>

<style>
.lineWeight-preview {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 120px;
}

.lineWeight-animation {
  width: 100px;
  height: 100px;
  border: 0px solid #ff6b6b;
  border-radius: 50%;
  margin: 2rem auto;
  transform-origin: center;
  box-sizing: border-box;
}
</style>

<script>
  import { gsap } from 'gsap';

  // DOMが読み込まれた後にアニメーションを開始
  document.addEventListener('DOMContentLoaded', () => {
    const lineWeight = gsap.fromTo(".lineWeight-animation", {
      borderWidth: 0,
    }, {
      borderWidth: 10,
      duration: 0.5,
      ease: "power2.out",
      repeat: -1,
      yoyo: true,
      repeatDelay: 1,
    });
  });
</script> 