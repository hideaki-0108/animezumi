---
const base = Astro.url.pathname;
const navItems = [
  {
    label: 'TOP',
    href: `${base}`
  },
  {
    label: 'アニメーション集',
    href: `${base}animations`
  },
]

---

<header class="header">
  <div class="header__inner">
    <h1 class="header__logo">
      <a href="/animezumi/" aria-label="トップに戻る">
        <span class="text-gradient">Anime</span><span class="text-accent">zumi</span>
      </a>
    </h1>
    <nav class="headerNav">
      <ul class="headerNav__list">
        {navItems.map((item) => (
          <li class="headerNav__item">
            <a href={item.href} class="headerNav__link">{item.label}</a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>

<style lang="scss">
  @use '../assets/css/components/header.scss';
</style>